<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/default_bg"
    android:orientation="vertical">

    <TextView
        android:id="@+id/groupName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/message_card_margin_medium"
        android:paddingTop="@dimen/margin_card"
        android:paddingLeft="@dimen/margin_card"
        android:paddingStart="@dimen/margin_card"
        android:paddingEnd="@dimen/margin_card"
        android:paddingRight="@dimen/margin_card"
        android:text="@string/sample_group"
        android:textColor="@color/md_grey_700"
        android:textSize="@dimen/skill_title"
        android:textStyle="bold"
        android:typeface="serif"
        app:fontFamily="sans-serif" />

    <android.support.v7.widget.RecyclerView
        android:id="@+id/skill_list"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

</LinearLayout>